	end

DewfordTown_PokemonCenter_1F_EventScript_Clerk::
	lock
	faceplayer
	message DewfordTown_PokemonCenter_1F_Text_ClerkIntro
	waitmessage
	goto DewfordTown_PokemonCenter_1F_EventScript_Pokemart
	end

